{
  "name": "eldarlrd",
  "private": true,
  "version": "0.6.0",
  "keywords": [
    "documentation",
    "blog",
    "tech"
  ],
  "description": "eldarlrd's docs & blog",
  "repository": "github:eldarlrd/eldarlrd",
  "homepage": "https://eldarlrd.github.io/eldarlrd",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "scripts": {
    "dev": "docusaurus start",
    "build": "docusaurus build",
    "serve": "docusaurus serve",
    "deployer": "docusaurus deploy",
    "style": "stylelint 'src/**/*.sass'",
    "pretty": "prettier '{src/**/*.ts,*.config.mts}' --write",
    "format": "pnpm style --fix && pnpm pretty"
  },
  "stylelint": {
    "customSyntax": "postcss-styl",
    "extends": [
      "stylelint-config-standard",
      "stylelint-stylus/standard"
    ],
    "rules": {
      "stylus/declaration-colon": "always"
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/plugin-content-docs": "^3.0.0",
    "@docusaurus/preset-classic": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^1.2.1",
    "docusaurus-plugin-sass": "^0.2.5",
    "prism-react-renderer": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^3.0.0",
    "@docusaurus/tsconfig": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@types/react": "^18.2.37",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-stylus": "^0.18.0",
    "typescript": "^5.2.2"
  },
  "babel": {
    "presets": [
      "@docusaurus/core/lib/babel/preset"
    ]
  }
}
